<h1>Edit director</h1>

<% @director.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>


<%= form_with(model: @director, method: :patch) do |form| %>

  <div>

    <%= label_tag :name, "Name" %>

    <%= text_field_tag :name, @director.name, id: "name" %>

  </div>

    <div>

    <%= label_tag :dob, "Dob" %>

    <%= date_field_tag :dob, @director.dob, id: "dob" %>

  </div>

  <div>

    <%= label_tag :bio, "Bio" %>

    <%= text_area_tag :bio, @director.bio, id: "bio", rows: 3 %>

  </div>

  <%= button_tag "Update Director" %>

<% end %>